{
  "name": "synkope-website",
  "version": "1.0.0",
  "description": "A modern, responsive website for Synkope consulting company",
  "main": "index.html",
  "scripts": {
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "format": "prettier --write \"**/*.{html,css,js,json}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{html,css,js,json}\" --ignore-path .gitignore",
    "build": "npm run lint && npm run format:check && npm run optimize",
    "build:fast": "npm run lint && npm run format:check",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "optimize": "node scripts/optimize-images.js",
    "optimize:no-backup": "node scripts/optimize-images.js --no-backup",
    "optimize:no-webp": "node scripts/optimize-images.js --no-webp",
    "serve": "npx serve . -p 8000",
    "dev": "npm run serve",
    "minify:css": "cleancss -o dist/css/style.min.css css/style.css",
    "minify:js": "uglifyjs js/script.js -o dist/js/script.min.js -c -m",
    "minify": "mkdir -p dist/css dist/js && npm run minify:css && npm run minify:js",
    "audit": "lighthouse http://localhost:8000 --only-categories=performance --output=html --output-path=./lighthouse-report.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Synkope/synkope-website.git"
  },
  "keywords": [
    "website",
    "consulting",
    "responsive",
    "vanilla-js"
  ],
  "author": "Synkope",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "clean-css-cli": "^5.6.2",
    "eslint": "^9.0.0",
    "imagemin": "^9.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-svgo": "^11.0.1",
    "imagemin-webp": "^8.0.0",
    "lighthouse": "^11.4.0",
    "prettier": "^3.6.2",
    "serve": "^14.2.1",
    "uglify-js": "^3.17.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
